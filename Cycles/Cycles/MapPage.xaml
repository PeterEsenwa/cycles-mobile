                         Grid.Column="0"
                         Grid.ColumnSpan="2"
                         HasZoomEnabled="True"
                         HorizontalOptions="FillAndExpand"
                         IsShowingUser="True"
                         IsVisible="False"
                         MapType="Street"
                         VerticalOptions="Start" />
